<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">

	<useStyles filename="nifty-default-styles.xml" />
	<useStyles filename="res/xml/customStyles/customStyles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	<useControls filename="res/xml/customControls/customControls.xml" />

	<screen id="chat" controller="view.gui.controllers.ChatScreenController">
		<layer id="background" childLayout="vertical">
			<image filename="res/imgs/ui/bg02.png"/>
		</layer>
		<layer id="foreground" childLayout="center">
			<panel childLayout="vertical" backgroundColor="#fffc" valign="center" align="center">
				<panel childLayout="vertical" backgorundColor="555" width="50%" height="95%" valign="top" align="left">
					
				</panel>
				<panel childLayout="vertical" backgroundColor="912" width="50%" height="95%" valign="top" align="right">
					
				</panel> 
				<panel childLayout="vertical" backgroundColor="111" height="5%" valign="bottom" align="center">
					<control id="chatLine" width="90%" name="textfield" align="left" valign="center"/>
					<control name="button" width="10%" align="right" valign="center">
						<interact onClick="sendMessage()"/>
					</control>
				</panel>
			</panel>
		</layer>
		<layer id="backLayer" childLayout="center">
			<control id="backButton" name="buttonRed" label="Main Menu" align="right" valign="top">
				<interact onClick="back()"/>
			</control>
		</layer>
	</screen>
</nifty>