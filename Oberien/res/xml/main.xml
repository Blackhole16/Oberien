<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
	
	<useStyles filename="nifty-default-styles.xml" />
	<useStyles filename="res/xml/customStyles/customStyles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	<useControls filename="res/xml/customControls/customControls.xml" />
	
	<screen id="start" controller="view.gui.controllers.StartScreenController">
		<layer id="background" childLayout="absolute" >
			<image filename="res/imgs/ui/bg03.png" x="0px" y="0px" width="100%" height="100%"/>
			<image filename="res/imgs/ui/gui_fg_1.png" x="0px" y="0px" width="733px" height="100%" 
					imageMode="repeat" /><!-- Resoulutions > 1920x1080? !-->
					
		</layer>
				
		<layer id="foreground" childLayout="vertical">
			<panel id="oberienPanel" align="left" valign="center" childLayout="center" height="20%" width="733px">
				<text id="oberien" wrap="false" font="res/fonts/128/airstrikecond.fnt" color="#ffffff" text="OBERIEN" width="80%" height="80%"/>
			</panel>
			<panel id="gameSetupPanel" style="nifty-button-minimal" align="left" valign="center" childLayout="center" height="20%" width="733px">
              <control id="gameSetupButton" name="button" style="nifty-button-minimal" label="Game Setup" align="center" valign="left" width="80%" height="80%">
                    <interact onClick="gameSetup()"/>
               </control>
            </panel>
            <panel id="multiplayerPanel" style="nifty-button-minimal" align="left" valign="center" childLayout="center" width="733px" height="20%">
               <control id="multiplayerButton" name="button" style="nifty-button-minimal" label="Multiplayer" align="center" valign="center" width="80%" height="80%">
                    <interact onClick="multiplayer()"/>
               </control>
            </panel>
			
			<panel align="left" valign="center" childLayout="center" width="733px" height="20%">
				<!-- layout helper !-->
			</panel>
			<panel id="lowerPanel" align="left" valign="center" childLayout="center" width="733px" height="20%">
				<panel align="center" valign="center" childLayout="horizontal" width="90%" height="80%">
					<control id="settingsButton" style="nifty-button-minimal" name="button" label="Settings" align="center" valign="center" 
						width="40%" height="50%">
						<interact onClick="settings()"/>
					</control>
					<panel align="left" valign="center" width="20%" height="50%" />
					
					<control id="exitButton" style="nifty-button-minimal" name="buttonRed" label="Exit" align="center" valign="center" width="40%" height="50%">
						<interact onClick="exit()"/>
					</control>
				</panel>
			</panel>
		</layer>
	</screen>
	
	<popup name="multiplayerlogin"  id="multiplayerlogin" childLayout="horizontal" backgroundColor="#0006">
		<panel childLayout="vertical" width="733px" backgroundColor="#0000">
			<panel width="100%" height="65%"/>
			<control name="button" backgroundColor="#0000" style="normal-button-discouraged" label="BACK" align="center" width="80%">
				<interact onClick="backToMainMenu()"/>
			</control>
		</panel>
		<panel childLayout="center">
			<image filename="res/imgs/ui/popup_background.png" width="100%" height="100%" 
				imageMode="resize:6,162,6,6,6,162,6,196,6,162,6,6" />
				
			<panel childLayout="vertical">
				<panel width="100%" height="15%" childLayout="center">
					<!-- layout helper !-->
				</panel>
				<text align="center" valign="top" wrap="true" font="res/fonts/64/raven.fnt" color="#ffffff" text="Please enter your login credentials" width="80%" height="16px" />
				<panel width="100%" height="15%" childLayout="center">
					<!-- layout helper !-->
				</panel>
				
				<control id="username" name="textfield" style="primaryTextfield" align="center" height="78px" width="80%" text="USERNAME">
					<interact onClick="clearUserField()"/>
				</control>
				<control id="password" name="textfield" style="primaryTextfield" passwordChar="â€¢" align="center" text="password" height="78px" width="80%">
					<interact onClick="clearPwdField()"/>
				</control>
				<control name="button" style="normal-button" label="Login" align="center" width="80%">
					<interact onClick="login()"/>
				</control>
				<panel width="100%" height="16px" childLayout="center">
					<!-- layout helper !-->
				</panel>
				<control name="label" text="Need an account?" font="res/fonts/32/raven.fnt"algin="center"/>
				<panel width="100%" height="16px" childLayout="center">
					<!-- layout helper !-->
				</panel>
				<control name="button" style="normal-button" label="Register" align="center" width="80%">
					<interact onClick="register()"/>
				</control>
				<text id="errorMessage" wrap="true" font="res/fonts/64/raven.fnt" color="#f00f" text=""/>

			</panel>
		</panel>
	</popup>
</nifty>